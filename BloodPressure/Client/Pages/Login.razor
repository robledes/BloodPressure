<PageTitle>Patient login</PageTitle>

<EditForm Model="_userLogin" OnValidSubmit="HandleLogin">
    <DataAnnotationsValidator />
    <MudGrid>
        <MudItem Class="d-flex align-center justify-center mud-width-full" xs="12">
            <MudCard Outlined="true" style="min-width: 250px">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudStack Row="true" AlignItems="AlignItems.Center">
                            <MudText Typo="Typo.h6">Patient login</MudText>
                            <MudSpacer />
                            <MudIconButton Icon="@Icons.Material.Filled.Close" OnClick="@(() => MudDialog.Cancel())"/>
                        </MudStack>
                        <MudDivider DividerType="DividerType.FullWidth" Class="mt-3" />
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent style="margin-top: -20px">
                    <MudTextField Label="Identification card" style="width: 150px" Mask="@_identificationCardMask" AutoFocus="true"
                            @bind-Value="_userLogin.IdentificationCard" For="@(() => _userLogin.IdentificationCard)" />
                    <MudTextField id="password" Label="Password" Adornment="Adornment.End" AdornmentIcon="@_passwordIcon"
                            @bind-Value="_userLogin.Password" For="@(() => _userLogin.Password)" InputType="@_inputType" OnAdornmentClick="ShowHidePassword" />
                </MudCardContent>
                <MudCardActions>
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Small"
                            Class="ml-auto" StartIcon="@Icons.Material.Filled.Login">Login</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</EditForm>