<PageTitle>Change password</PageTitle>

<EditForm Model="_userChangePassword" OnValidSubmit="HandleChangePassword">
    <DataAnnotationsValidator />
    <MudGrid>
        <MudItem Class="d-flex align-center justify-center mud-width-full" xs="12">
            <MudCard Outlined="true" style="min-width: 250px">
                <MudCardHeader>
                    <CardHeaderContent>
                        <MudStack Row="true" AlignItems="AlignItems.Center">
                            <MudText Typo="Typo.h6">Change password</MudText>
                            <MudSpacer />
                            <MudIconButton Icon="@Icons.Material.Filled.Close" OnClick="@(() => MudDialog.Cancel())"/>
                        </MudStack>
                        <MudDivider DividerType="DividerType.FullWidth" Class="mt-3" />
                    </CardHeaderContent>
                </MudCardHeader>
                <MudCardContent style="margin-top: -20px">
                        <MudTextField Label="New password" HelperText="Choose a strong password" HelperTextOnFocus="true"
                                        @bind-Value="_userChangePassword.Password" For="@(() => _userChangePassword.Password)" InputType="InputType.Password" />
                        <MudTextField Label="Confirm password" HelperText="Repeat the password" HelperTextOnFocus="true"
                                        @bind-Value="_userChangePassword.ConfirmPassword" For="@(() => _userChangePassword.ConfirmPassword)" InputType="InputType.Password"/>
                </MudCardContent>
                <MudCardActions style="margin-top: -30px">
                    <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Size="Size.Small"
                            Class="ml-auto" StartIcon="@Icons.Material.Filled.Save">Save</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</EditForm>